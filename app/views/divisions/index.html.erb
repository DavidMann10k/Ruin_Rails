<%= link_to "/Divisions", divisions_path %>
<% @divisions.each do |d| %>
	<div class="list">
		<h3 class="title">
			<sup><%= d.id %> <%= d.dex %></sup>
			<%= link_to d.title, :action => "show", :controller => "divisions", :id => d.id %>
			<sup><%= link_to "^", { :controller => "divisions", :action => "dex_up", :id => d.id}, :class => "up" %></sup>
			
			<sup><%= link_to "X", d, 	:method => :delete,
							  	  		:confirm => "Division and all child forums will be permanently and irrecoverably destroyed!  Are you sure?",
							  	  		:title => "Delete #{d.title}",
							  	  		:class => "destroy" %></sup>
		</h3>
			
		<table>
			<% d.forums.each do |f| %>
				
				<tr class="item">
					<td class="thin"><%= f.id %></td>
					<td class="thin"><%= f.dex %></td>
					<td><%= link_to f.title, forum_path(f.id) %></td>
				</tr>
			<% end %>
		</table>
		<%= link_to "+Forum", {:controller => "forums", :action => "new", :division_id => d.id}, :class => "add_item" %>
	</div>
<% end %>
<%= link_to "+Division", "divisions/new", :class => "add_list" %>