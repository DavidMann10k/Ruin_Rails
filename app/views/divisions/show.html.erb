<%= render "shared/forums_nav" %>
<%= link_to "Edit", edit_division_path(@division.id)%>
<%= link_to "Destroy", @division, :method => :delete,
							  	  :confirm => "Divisions and all child forums will be permanently and irrecoverably destroyed!  Are you sure?",
							  	  :title => "Delete #{@division.title}" %>

<table>
	<% @division.forums.each do |f| %>
		<tr>
			<td><%= link_to "#{f.title}", :controller => "forums", :action => "show", :id => f.id%></td>
		</tr>
	<% end %>
</table>
