<%= link_to "/Divisions", divisions_path %> <%= link_to "/#{@forum.division.title}", division_path(@forum.division.id)%>
<div class="list">
	<h3 class="title">
		<sup><%= @forum.id if admin? %> <%= @forum.dex if admin? %></sup>
		<%= @forum.title %>			
		<sup><%= link_to "X", @forum, 	:method => :delete,
						  	  				:confirm => "Forum and all child forums will be permanently and irrecoverably destroyed!  Are you sure?",
						  	  				:title => "Delete #{@forum.title}",
						  	  				:class => "destroy" if admin? %></sup>
		<sup><%= link_to "Edit", edit_forum_path(@forum.id), :class => "edit" if admin? %></sup>
	</h3>

	<table>
		<% @forum.topics.order("updated_at DESC").each do |t| %>
			<tr class="item">
				<td><%= link_to t.title, topic_path(t.id) %></td>
				<td class="thin"><nobr><%= link_to "-#{t.user.name}", user_path(t.user.id) %></nobr></td>
				<td class="thin"><nobr>@<%= t.created_at %></nobr></td>
			</tr>
		<% end %>
	</table>
	
	<%= link_to "+Topic", new_topic_path(:forum_id => @forum.id), :class => "add_item" %>
</div>