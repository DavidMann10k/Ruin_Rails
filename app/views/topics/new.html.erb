<%= link_to "/Divisions", divisions_path %>
<%= link_to "/#{@forum.division.title}", division_path(@forum.division.id)%>
<%= link_to "/#{@forum.title}", forum_path(@forum.id) %>
<%= form_for(@topic) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title, :autofocus => true %>
	</div>
	<%= hidden_field_tag(:forum_id, params[:forum_id]) %>
	<div class="actions">
		<%= f.submit "Create Topic" %>
		<%= f.submit "Cancel" %>
	</div>
<% end %>