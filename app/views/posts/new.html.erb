<div class="list">
	<table>
		<tr class="item">
			<td>
				<div class="content">
					<%= link_to "-#{current_user.name}", user_path(current_user.id), :class => "user" %>
					<%= simple_format(params[:content]) %>
				</div>
			</td>	
		</tr>
	</table>
</div>

<%= form_for(@post) do |p| %>
	<%= render 'shared/error_messages', :object => p.object %>
	<div class="field">
		<%= p.label :content %><br />
		<%= p.text_area :content, :autofocus => true %>
	</div>
	<%= hidden_field_tag(:topic_id, params[:topic_id]) %>
	<div class="de-emph" id="note">(HTML enabled)</div>
	<div class="actions">
		<%= p.submit "Create Post", :class => "action" %>
		<%= p.submit "Preview Post", :class => "action" %>		
		<%= p.submit "Cancel", :class => "action" %>
	</div>
<% end %>