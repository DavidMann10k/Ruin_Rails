<%= link_to "/Divisions", divisions_path %> <%= link_to "/#{@post.topic.forum.division.title}", division_path(@post.topic.forum.division.id)%>  <%= link_to "/#{@post.topic.forum.title}", forum_path(@post.topic.forum.id) %> <%= link_to "/#{@post.topic.title}", topic_path(@post.topic.id) %>
<%= form_for(@post) do |p| %>
	<%= render 'shared/error_messages', :object => p.object %>
	<div class="field">
		<%= p.label :content %><br />
		<%= p.text_area :content, :autofocus => true %>
	</div>
	<%= hidden_field_tag(:topic_id, params[:topic_id]) %>
	<div class="actions">
		<%= p.submit "Confirm Editions", :class => "action" %>
		<%= p.submit "Cancel", :class => "action" %>
	</div>
<% end %>