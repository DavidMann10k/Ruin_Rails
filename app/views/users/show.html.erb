<% if @user.rank.clearance == 0 %>
	<h2>IMPORTANT!</h2>
	<h4>Your access rank is "Registered" - an admin has been notified and will promote you appropriately.</h4>
	<h4>You may view the <%= link_to "public forums", divisions_path %> until then.</h4>
<% end %>

<div class="list">
	<h3>Information</h3>
	<ul>
		<li>Name: <%= @user.name %></li>
		<% if signed_in? && @user.id == current_user.id %>
			<li>Email: <%= @user.email %> <span class="emph">(hidden)</span></li>
		<% end %>
		<li>Access Rank: <%= @user.rank.title %></li>
		<li><%= "Member Since: #{@user.created_at.strftime('%B %d, %Y')}" %></li>
	</ul>
	<% if signed_in? && @user.id == current_user.id %>
		<%= link_to "Edit Name/Email", edit_user_path(params[:id]), :class => "cool_link" %>
	<% end %>
</div>
<div class="list">
	<h3>Availability</h3>
	<ul>
		<% @user.schedule_items.each do |i| %>
			<li>
				<%= Date::DAYNAMES[i.day] %> @ <%= translate_time(i.start_hour) %> for <%= i.duration %> hours.
				<%= link_to "destroy", schedule_item_path(i), :action => "delete", :method => "delete", :class => "button" if current_user.id == i.user_id || admin? if signed_in? %>
			</li>
		<% end %>
	</ul>
	<%= link_to "Add Availability", new_schedule_item_path, :class => "cool_link"%>
</div>
