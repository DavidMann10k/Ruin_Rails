<!DOCTYPE html>
<html>
	<head>
	  <title><%= title %></title>
	  <%= render "layouts/stylesheets"%>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tag %>
	</head>
	signed_in?: <%= signed_in? %>, current_user: <%= current_user%> 
	<body>
		<%= render 'layouts/scheme'%>
		<%= render 'layouts/header' %>
		<div class="container">
	        <% flash.each do |key, value| %>
	            <div class="flash <%= key %> round"><%= value %></div>
	        <% end %>
			<section>
				<h1>/<%= @title %></h1>
			    <%= yield %>
			</section>
			<%= render 'layouts/footer' %>
			<%= render "layouts/testing" if Rails.env.development? and false %>
		</div>
	</body>
</html>