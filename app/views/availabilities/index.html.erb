<h1>Listing availabilities</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Begin</th>
    <th>End</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @availabilities.each do |availability| %>
  <tr>
    <td><%= Date::DAYNAMES[availability.day] %></td>
    <td><%= availability.begin.strftime("%I:%M %p") %></td>
    <td><%= availability.end.strftime("%I:%M %p") %></td>
    <td><%= link_to User.find(availability.user_id).name, user_path(availability.user_id) %></td>
    <td><%= link_to 'Edit', edit_availability_path(availability), :class => "button" if current_user == availability.user %></td>
    <td><%= link_to 'Destroy', availability, confirm: 'Are you sure?', method: :delete, :class => "button"  if current_user == availability.user %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Availability', new_availability_path, :class => "cool_link" %>
