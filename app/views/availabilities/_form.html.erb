<%= form_for(@availability) do |f| %>
  <% if @availability.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@availability.errors.count, "error") %> prohibited this availability from being saved:</h2>

      <ul>
      <% @availability.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :begin %><br />
    <%= f.select(:begin, [["Sunday", 1], ["Monday", 2], ["Tuesday", 3], ["Wednesday", 4], ["Thursday", 5], ["Friday", 6], ["Saturday", 7]]) %>
    <%= f.datetime_select :begin, :ampm => true, :order => [:hour, :minute] %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.select(:end, [["Sunday", 1], ["Monday", 2], ["Tuesday", 3], ["Wednesday", 4], ["Thursday", 5], ["Friday", 6], ["Saturday", 7]]) %>
    <%= f.time_select :end, :ampm => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
